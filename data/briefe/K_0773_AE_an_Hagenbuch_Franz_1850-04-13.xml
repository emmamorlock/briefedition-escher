        <p rend="left" xml:id="K_0773_p7"><lb xml:id="p2-l14"/>
          <placeName key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p2-l15"/>
         <date when="1850-04-13">13. April 1850</date>. </p>
      </div>
    </back></text></TEI>