        <p rend="indent" xml:id="K_4689_p11"><lb xml:id="p4-l6"/>
          <placeName key="Zürich (Stadt)">Zürich</placeName>
          <lb xml:id="p4-l7"/>
          <date when="1864-03-12">12 März 1864</date>.</p>
      </div>
