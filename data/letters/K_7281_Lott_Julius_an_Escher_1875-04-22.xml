    <front>
      <div type="printedheader">
        <p rend="left" xml:id="K_7281_p1"> <seg type="com">
                        <note type="addendum" xml:id="K_7281_c0">Datierung gemäss Briefkontext.</note>
                    </seg> <fw>
            <lb xml:id="p1-l1"/>JL</fw>
