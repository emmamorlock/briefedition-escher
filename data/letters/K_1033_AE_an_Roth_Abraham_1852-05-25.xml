        <p rend="left" xml:id="K_1033_p10">
                    <lb xml:id="p4-l15"/>
          <placeName type="place" key="Belvoir (Enge, Zürich)">
                        <hi>Belvoir</hi>
                    </placeName>
          <lb xml:id="p4-l16"/> bei <placeName type="place" key="Zürich (Stadt)">Zürich</placeName> <lb xml:id="p4-l17"/>  <date when="1852-05-25">25. V. 52. </date>
                </p>
      </div>
