        <p rend="right" xml:id="K_1033_p9">
                    <lb xml:id="p4-l14"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
