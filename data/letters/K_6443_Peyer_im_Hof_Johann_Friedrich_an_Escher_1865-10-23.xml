        <p rend="indent" xml:id="K_6443_p8">
                    <lb xml:id="p8-l2"/>Für <date when="1865-10-23">heute</date> genug,</p>
        <p rend="right" xml:id="K_6443_p9">
                    <lb xml:id="p8-l3"/>Dein</p>
