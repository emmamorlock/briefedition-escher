          <placeName type="place" key="Belvoir (Enge, Zürich)">
                        <hi>Belvoir</hi>
                    </placeName>
          <lb xml:id="p3-l24"/>
         <date when="1855-02-21">21. II. 55</date>.</p>
      </div>
