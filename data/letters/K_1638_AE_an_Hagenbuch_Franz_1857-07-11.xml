        <p rend="indent" xml:id="K_1638_p9">
                    <lb xml:id="p4-l7"/>
          <placeName type="place" key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p4-l8"/>
         <date when="1857-07-11">11. Juli 1857</date>.</p>
      </div>
