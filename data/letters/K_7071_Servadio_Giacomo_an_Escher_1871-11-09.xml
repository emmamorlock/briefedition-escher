      <div type="address">
        <p rend="center" xml:id="K_7071_p3">
                    <lb xml:id="p1-l10"/>Monsieur Alfred Escher</p>
        <p rend="center" xml:id="K_7071_p4">
                    <lb xml:id="p1-l11"/>
          <placeName type="place" key="Zürich (Stadt)">Zurich</placeName>
        </p>
