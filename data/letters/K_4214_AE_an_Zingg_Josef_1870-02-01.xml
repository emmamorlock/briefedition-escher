        <p rend="right" xml:id="K_4214_p12">
                    <lb xml:id="p4-l19"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
