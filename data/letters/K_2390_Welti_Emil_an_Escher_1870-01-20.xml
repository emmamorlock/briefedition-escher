          <placeName type="place" key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p4-l11"/>
          <date when="1870-01-20">20 <choice>
                            <abbr>Jan.</abbr>
                            <expan>Januar</expan>
                        </choice> 1870</date>.</p>
