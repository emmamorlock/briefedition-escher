        <p rend="right" xml:id="K_3514_p8">
                    <lb xml:id="p3-l10"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A
				Escher</p>
      </div>
