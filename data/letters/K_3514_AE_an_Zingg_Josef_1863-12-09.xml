          <lb xml:id="p3-l12"/>
          <date when="1863-12-09">9 <choice>
                            <abbr>Dez<hi rend="sup">ber</hi> </abbr>
                            <expan>Dezember</expan>
                        </choice>
					1863</date>.</p>
