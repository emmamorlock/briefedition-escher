            <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>
          </hi>
          <date when="1870-07-02">2 <hi>Juli</hi> 1870</date>
        </p>
      </div>
      <div type="address">
        <p rend="left" xml:id="K_7131_p10">
                    <lb xml:id="p1-l38"/>Herrn Präsident <choice>
                        <abbr>D<hi rend="sup">r</hi> </abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> <hi>A Escher</hi> hier</p>
