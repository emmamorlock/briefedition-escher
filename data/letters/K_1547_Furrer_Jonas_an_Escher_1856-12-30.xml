          <placeName type="place" key="Karlsruhe (D)">
                        <hi>Carlsruhe</hi>
                    </placeName>
         <date when="1856-12-30">30 <choice>
                            <abbr>
                                <hi>Dec</hi> </abbr>
                            <expan>December</expan>
                        </choice> 1856</date>.</p>
      </div>
