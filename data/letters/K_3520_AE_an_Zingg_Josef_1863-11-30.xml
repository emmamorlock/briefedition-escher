        <p rend="center" xml:id="K_3520_p15">
                    <lb xml:id="p7-l10"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A
				Escher</p>
      </div>
