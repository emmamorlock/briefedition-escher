        <p rend="left" xml:id="K_3580_p7">
                    <lb xml:id="p3-l3"/>
          <placeName type="place" key="Basel-Stadt">Basel</placeName> d<supplied>en</supplied> <date when="1864-12-26">26<hi rend="sup">t</hi> <choice>
                            <abbr>X<hi>br</hi>
                        </abbr>
                            <expan>December</expan>
                        </choice> 1864.</date> </p>
      </div>
    </back>
