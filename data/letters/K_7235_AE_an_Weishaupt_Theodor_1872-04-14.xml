        <p rend="center" xml:id="K_7235_p8">
                    <lb xml:id="p4-l11"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
