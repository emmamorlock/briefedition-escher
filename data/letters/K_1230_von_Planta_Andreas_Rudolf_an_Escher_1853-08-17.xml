        <p rend="left" xml:id="K_1230_p10">
                    <lb xml:id="p3-l22"/>
          <placeName type="place" key="Samedan">
                        <hi>Samaden</hi>
                    </placeName> den <seg type="com">
                        <date when="1853-08-17">17<hi rend="sup">ten</hi> <hi>August</hi>
                        </date>.<note xml:id="K_1230_c10">Datierung gemäss Briefkontext.</note>
                    </seg>
                </p>
      </div>
