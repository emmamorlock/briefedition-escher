        <p rend="left" xml:id="K_0999_p8">
                    <lb xml:id="p2-l31"/>
          <placeName type="place" key="Winterthur">Winterthur</placeName>
         <date when="1852-03-07">7. Merz 1852</date>.</p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_0999_p9">
                    <lb xml:id="p2-l32"/>Huggenberger<lb xml:id="p2-l33"/>
                    <choice>
                        <abbr>Statth.</abbr>
                        <expan>Statthalter</expan>
                    </choice> </p>
      </div>
