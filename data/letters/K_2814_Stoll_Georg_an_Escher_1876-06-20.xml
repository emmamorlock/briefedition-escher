      <div type="closer">
        <p rend="right" xml:id="K_2814_p12">
                    <lb xml:id="p4-l17"/>Mit aufrichtiger Verehrung</p>
        <p rend="right" xml:id="K_2814_p13">
                    <lb xml:id="p4-l18"/>Ihr</p>
      </div>
