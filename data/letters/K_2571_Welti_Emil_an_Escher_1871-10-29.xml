        <p rend="left" xml:id="K_2571_p8">
                    <lb xml:id="p4-l11"/>
          <placeName type="place" key="Bern (Stadt)">Bern</placeName> den <date when="1871-10-29">29. <choice>
                            <abbr>Okt.</abbr>
                            <expan>Oktober</expan>
                        </choice> 1871</date>.</p>
