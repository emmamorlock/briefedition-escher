        <p rend="indent" xml:id="K_2369_p8">
                    <lb xml:id="p3-l17"/>
          <placeName type="place" key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p3-l18"/>
          <date when="1869-10-30">30. <choice>
                            <abbr>Oct.</abbr>
                            <expan>October</expan>
                        </choice> 1869</date>.</p>
      </div>
