          <hi>Hotel Baur</hi> den <date when="1853-10-03">3<hi rend="sup">t<supplied>en</supplied> </hi> <choice>
                            <abbr>Octr</abbr>
                            <expan>October</expan>
                        </choice> </date> <seg type="com">
