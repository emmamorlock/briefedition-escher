            <hi>
                        <placeName type="place" key="Riesbach (Zürich)">Riesbach</placeName>-<placeName type="place" key="Zürich (Stadt)">Zürich</placeName> </hi>
          
          <date when="1877-03-07">7. März 1877</date>.</p>
      </div>
      <div type="address">
        <p rend="center" xml:id="K_7671_p2">
                    <lb xml:id="p1-l2"/>Herrn <hi>Präsident <choice>
                            <abbr>D<hi rend="sup">r</hi> </abbr>
                            <expan>Doktor / Doctor</expan>
                        </choice> Alfr. Escher</hi> </p>
        <p rend="right" xml:id="K_7671_p3">
