        <p rend="left" xml:id="K_3626_p13">
                    <lb xml:id="p8-l13"/>
        <placeName type="place" key="Luzern (Stadt)">
                        <hi>Luzern</hi>
                    </placeName> d. <date when="1864-05-05">5. <hi>Mai</hi> 1864</date>.</p> </div>
