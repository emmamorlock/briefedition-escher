        <p rend="center" xml:id="K_5418_p25">
                    <lb xml:id="p6-l4"/>
          <hi>
            <choice>
                            <abbr>D<hi rend="sup">r</hi> </abbr>
                            <expan>Doktor / Doctor</expan>
                        </choice> Gonzenbach</hi>
        </p>
      </div>
