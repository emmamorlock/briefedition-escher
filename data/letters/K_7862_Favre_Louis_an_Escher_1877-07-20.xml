          <fw>
            <placeName type="place" key="Altdorf (UR)">Altorf</placeName> (Canton d'<placeName type="place" key="Uri">Uri</placeName>–Suisse), le</fw>
          <seg type="com">
                        <date when="1877-07-20">20 Juillet <fw>187</fw>7</date>
                        <note xml:id="K_7862_c1">Nachträgliche Notiz von dritter Hand:<bibl>/22</bibl>.</note>
