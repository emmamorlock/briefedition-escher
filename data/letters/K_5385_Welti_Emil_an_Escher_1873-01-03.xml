      <div type="closer">
        <p rend="center" xml:id="K_5385_p11">
                    <lb xml:id="p7-l10"/>Von ganzem Herzen</p>
        <p rend="right" xml:id="K_5385_p12">
                    <lb xml:id="p7-l11"/>Ihr</p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_5385_p13">
                    <lb xml:id="p7-l12"/>E Welti</p>
      </div>
