      <div type="dateline">
        <p rend="right" xml:id="K_7041_p7">
                    <lb xml:id="p1-l13"/>
          <placeName type="place" key="Zürich (Stadt)">Zurich</placeName>, le <date when="1871-11-01">1<hi rend="sup">r</hi> Novembre
                1871</date> </p>
