        <p rend="indent" xml:id="K_1501_p7">
                    <lb xml:id="p2-l26"/>
          <placeName type="place" key="Zürich (Stadt)">Zürich</placeName> – <date when="1856-07-13">13 <hi>Juli</hi>. 1856</date> </p>
      </div>
