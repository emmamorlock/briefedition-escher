      <div type="closer">
        <p rend="indent" xml:id="K_2716_p7">
                    <lb xml:id="p3-l20"/>Mit herzlichem Gruße</p>
      <p rend="right" xml:id="K_2716_p8">
                    <lb xml:id="p3-l21"/>Ihr</p> </div>
