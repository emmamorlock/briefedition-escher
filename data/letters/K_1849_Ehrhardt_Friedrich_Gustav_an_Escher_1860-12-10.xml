      <div type="closer">
        <p rend="right" xml:id="K_1849_p8">
                    <lb xml:id="p3-l21"/>Ganz Dein
                </p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_1849_p9">
                    <lb xml:id="p3-l22"/>Er
                </p>
      </div>
