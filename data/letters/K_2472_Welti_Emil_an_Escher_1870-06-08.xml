      <div type="closer">
        <p rend="center" xml:id="K_2472_p6">
                    <lb xml:id="p4-l17"/>Ihr ganz ergebenster</p>
      </div>
      <div type="address">
        <p rend="center" xml:id="K_2472_p7">
                    <lb xml:id="p4-l18"/>E Welti</p>
      </div>
