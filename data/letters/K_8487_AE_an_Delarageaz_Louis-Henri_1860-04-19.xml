                <p rend="left" xml:id="K_8487_p10">
                    <lb xml:id="p4-l5"/>
                    <placeName type="place" key="Belvoir (Enge, Zürich)">
                        <hi>Belvoir</hi>
                    </placeName> bei <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>
                    <lb xml:id="p4-l6"/>
                    <date when="1860-04-19">19 April 1860./.</date>
                </p>
