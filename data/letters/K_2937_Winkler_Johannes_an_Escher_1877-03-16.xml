        <p rend="right" xml:id="K_2937_p20">
                    <lb xml:id="p4-l11"/>
          <choice>
                        <abbr>D<hi rend="sup">r</hi> </abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> Joh Winkler</p>
      </div>
