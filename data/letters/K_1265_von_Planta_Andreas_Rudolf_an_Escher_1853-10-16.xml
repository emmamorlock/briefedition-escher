        <p rend="left" xml:id="K_1265_p9">
                    <lb xml:id="p3-l26"/>
          <placeName type="place" key="Reichenau (Tamins)">Reichenau</placeName> den <seg type="com">
                        <date when="1853-10-16">16<hi rend="sup">ten</hi> <choice>
                                <abbr>
                                <hi>Octb<hi rend="sup">r</hi>
                                </hi>
                            </abbr>
                                <expan>October</expan>
                            </choice>
                        </date>
                        <note xml:id="K_1265_c9">Datierung gemäss Briefkontext.</note>
                    </seg> </p>
