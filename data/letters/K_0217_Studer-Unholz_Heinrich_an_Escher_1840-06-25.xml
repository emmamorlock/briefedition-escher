        <p rend="right" xml:id="K_0217_p5">
                    <lb xml:id="p2-l10"/>J. H. Studer<!--Folge von Spatien-->
        <lb xml:id="p2-l11"/>
        <hi>alt <choice>
                            <abbr>Ctsrth</abbr>
