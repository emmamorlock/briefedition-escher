        <p rend="left" xml:id="K_3612_p9">
                    <lb xml:id="p4-l9"/>
          <placeName type="place" key="Luzern (Stadt)">
                        <hi>Luzern</hi>
                    </placeName>
					d.
					<date when="1864-03-09">9. März 64</date>.
		</p>
