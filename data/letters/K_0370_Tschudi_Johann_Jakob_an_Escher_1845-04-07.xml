          <placeName type="place" key="St. Gallen (Stadt)">
                        <hi>St. Gallen</hi>
                    </placeName>
         <date when="1845-04-07">7. IV. 45.</date>
          <lb xml:id="p1-l22"/> am obern Graben</p>
      </div>
