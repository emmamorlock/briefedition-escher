        <p rend="right" xml:id="K_2897_p6">
                    <lb xml:id="p3-l5"/>
      
            <choice>
                        <abbr>D<hi rend="sup">r</hi> </abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> J. Heer.
        </p>
