      <div type="address">
        <p rend="center" xml:id="K_7092_p3">
                    <lb xml:id="p1-l9"/>Monsieur Alfred Escher
        <lb xml:id="p1-l10"/>
          <placeName type="place" key="Zürich (Stadt)">Zurich</placeName>
                </p>
