    <back>
      <div type="closer">
        <p rend="indent" xml:id="K_0552_p4">
                    <lb xml:id="p1-l20"/>Empfangen Sie die Versicherung vollkommener Hochschätzung &amp; Ergebenheit</p>
        <p rend="right" xml:id="K_0552_p5">
                    <lb xml:id="p1-l21"/>Ihres</p>
      </div>
