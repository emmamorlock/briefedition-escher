        <p rend="center" xml:id="K_3397_p8">
                    <lb xml:id="p3-l4"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
