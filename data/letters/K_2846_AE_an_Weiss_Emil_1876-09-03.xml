      <div type="address">
        <p rend="center" xml:id="K_2846_p3">
                    <lb xml:id="p1-l3"/>Herrn Direktor <hi>E. Weiss</hi> </p>
        <p rend="right" xml:id="K_2846_p4">
                    <lb xml:id="p1-l4"/>
          <placeName type="place" key="Zürich (Stadt)">
