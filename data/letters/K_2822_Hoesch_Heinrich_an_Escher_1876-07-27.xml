        <p rend="right" xml:id="K_2822_p8">
                    <lb xml:id="p2-l13"/>Hochachtung</p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_2822_p9">
                    <lb xml:id="p2-l14"/>
          H Hoesch
        </p>
