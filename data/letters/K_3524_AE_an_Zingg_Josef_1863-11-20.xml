      <postscript>
        <p rend="indent" xml:id="K_3524_p10">
                    <lb xml:id="p4-l13"/>Herzliche Grüße an Herrn <persName type="person" key="Dula Niklaus">Dula</persName>: er<lb xml:id="p4-l14"/> hat mir auch zur Empfehlung des
						<choice>
                        <abbr>H<supplied>rn</supplied> </abbr>
                        <expan>Herrn</expan>
                    </choice> <hi>
                        <persName type="person" key="Blaize-Schnieper">Baize</persName> </hi> <lb xml:id="p4-l15"/>
					geschrieben.</p>
      </postscript>
