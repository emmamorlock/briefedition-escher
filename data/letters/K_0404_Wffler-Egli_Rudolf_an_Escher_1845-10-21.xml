        <p rend="left" xml:id="K_0404_p9">
                    <lb xml:id="p3-l8"/>
          <placeName type="place" key="Winterthur">Winterthur</placeName> den <date when="1845-10-21">21 <choice>
                            <abbr>
                                <hi>Oct</hi>
                            </abbr>
                            <expan>October</expan>
                        </choice>
            1845-</date> </p>
      </div>
    </back>
