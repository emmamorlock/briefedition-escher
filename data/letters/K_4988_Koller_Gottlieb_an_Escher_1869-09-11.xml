        <p rend="right" xml:id="K_4988_p12">
                    <lb xml:id="p4-l21"/>
          <hi>G. Koller <choice>
                            <abbr>Ing</abbr>
                            <expan>Ingenieur</expan>
                        </choice> </hi>
        </p>
      </div>
    </back>
