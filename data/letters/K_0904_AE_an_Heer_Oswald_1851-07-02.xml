        <p rend="left" xml:id="K_0904_p8">
                    <lb xml:id="p2-l7"/>
          <placeName key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p2-l8"/>
         <date when="1851-07-02">2 Juli 1851</date>.</p>
      </div>
    </back></text></TEI>