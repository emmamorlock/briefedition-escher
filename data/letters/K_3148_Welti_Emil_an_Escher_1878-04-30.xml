        <p rend="indent" xml:id="K_3148_p7">
                    <lb xml:id="p4-l13"/>
          <placeName type="place" key="Bern (Stadt)">Bern</placeName>
          <lb xml:id="p4-l14"/>
          <date when="1878-04-30">30. April 1878</date>.</p>
