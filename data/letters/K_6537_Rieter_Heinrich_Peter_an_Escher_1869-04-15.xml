          <hi>Brühl<!--kein Ort (Brühlgutpark von Rieter), TM-->
                        <choice>
                            <abbr>b</abbr>
                            <expan>bei</expan>
                        </choice>/<placeName type="place" key="Winterthur">Whur</placeName> </hi>
          <lb xml:id="p3-l19"/>
