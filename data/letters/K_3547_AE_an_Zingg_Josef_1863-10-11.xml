          <placeName type="place" key="Belvoir (Enge, Zürich)">Belvoir</placeName>
          <lb xml:id="p3-l21"/>
          <date when="1863-10-11">11 <choice>
                            <abbr>Oct<hi rend="sup">r</hi> </abbr>
                            <expan>October</expan>
                        </choice>
				1863.</date>
        </p>
