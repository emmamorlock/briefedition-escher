      <div type="closer">
        <p rend="indent" xml:id="K_5883_p7">
                    <lb xml:id="p4-l22"/>Herzlich</p>
        <p rend="center" xml:id="K_5883_p8">
                    <lb xml:id="p4-l23"/>Ihr</p>
      </div>
