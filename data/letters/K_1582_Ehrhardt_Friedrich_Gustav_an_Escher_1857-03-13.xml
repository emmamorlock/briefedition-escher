        <p rend="indent" xml:id="K_1582_p11">
                    <lb xml:id="p3-l12"/>
          <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>
          <lb xml:id="p3-l13"/>den <date when="1857-03-13">13. März 1857</date>.</p>
      </div>
