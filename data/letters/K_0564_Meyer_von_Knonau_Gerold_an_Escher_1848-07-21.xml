        <p rend="left" xml:id="K_0564_p6">
                    <lb xml:id="p2-l19"/>
          <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>,<lb xml:id="p2-l20"/>
den <date when="1848-07-21">21 Juli 1848</date> </p>
      </div>
