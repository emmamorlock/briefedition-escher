          <placeName type="place" key="Luzern (Stadt)">
                        <hi>Luzern</hi>
                    </placeName> den
				<date when="1871-09-11">10. <choice>
                            <abbr>
                                <hi>Sept</hi>.</abbr>
                            <expan>September</expan>
                        </choice> 1871</date>.</p>
