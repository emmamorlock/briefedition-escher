        <p rend="right" xml:id="K_2463_p9">
                    <lb xml:id="p4-l8"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
