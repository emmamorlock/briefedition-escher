                    <lb xml:id="p3-l6"/>
          <placeName type="place" key="Triest (I)">
                        <hi>Triest</hi>
                    </placeName> den <date when="1853-09-06">6. <choice>
                            <abbr>7<hi rend="sup">br</hi> </abbr>
                            <expan>September</expan>
                        </choice> 1853</date>.</p>
