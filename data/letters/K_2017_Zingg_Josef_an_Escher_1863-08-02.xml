        </row>
        <row><cell><placeName key="Zürich">Zürich</placeName>., </cell>
          <cell><choice><abbr>d<hi rend="sup">o</hi> </abbr><expan>dito (dasselbe)</expan></choice> " "</cell>
          <cell>" <hi><persName key="Benz Rudolf">Benz</persName> </hi> &amp; <hi><persName key="Hagenbuch Franz">Hagenbuch</persName></hi>.</cell>
        </row>
