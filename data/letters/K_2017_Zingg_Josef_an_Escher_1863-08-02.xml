        </row>
        <row><cell><placeName key="Nidwalden">Unterwalden</placeName>, </cell>
          <cell><choice><abbr>d<hi rend="sup">o</hi> </abbr><expan>dito (dasselbe)</expan></choice> " "</cell>
          <cell>" <choice><abbr>Land.</abbr><expan>Landammann</expan></choice> <persName key="Kaiser Jakob"><hi>J</hi>. <hi>Kaiser</hi></persName>.</cell>
        </row>
        <row>
          <cell><placeName key="Schaffhausen">Schaffhausen</placeName>,</cell>
          <cell><choice><abbr>d<hi rend="sup">o</hi> </abbr><expan>dito (dasselbe)</expan></choice> " "</cell>
          <cell><choice><abbr>HH.</abbr><expan>Herren</expan></choice> <persName key="Stokar Gustav">Stokar</persName>
              &amp; <persName key="Hallauer Johannes">Hallauer</persName>.</cell>
        </row>
