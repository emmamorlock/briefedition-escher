        <p rend="left" xml:id="K_2935_p6">
                    <lb xml:id="p4-l18"/>
          <placeName type="place" key="Bern (Stadt)">
                        <hi>Bern</hi>
                    </placeName> d. <date when="1877-03-09">9. <hi>März</hi> 1877</date>.</p>
      </div>
