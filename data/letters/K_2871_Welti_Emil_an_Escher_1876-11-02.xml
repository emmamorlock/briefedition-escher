        <p rend="left" xml:id="K_2871_p9">
                    <lb xml:id="p3-l13"/> <seg type="ref">Herr <persName type="person" key="Zingg Josef">Zingg</persName>
                        <ref type="kbp">→ Josef Zingg</ref>
                    </seg> der <date when="1876-11-02">heute</date> hier war wird Ihnen<lb xml:id="p3-l14"/>
