        <p rend="left" xml:id="K_1623_p10">
                    <lb xml:id="p3-l19"/>
          <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>
         <date when="1857-05-29">29 <hi>Mai</hi> 1857</date>
        </p>
      </div>
