        <p rend="left" xml:id="K_0059_p11">
                    <lb xml:id="p3-l33"/>
          <hi rend="underline">Am Donnerstag Abend           
               <lb xml:id="p3-l34"/>hoffentlich wieder in <placeName type="place" key="Zürich (Stadt)">Zürich</placeName>
                    </hi>
        </p>
      </postscript>
    </back>
