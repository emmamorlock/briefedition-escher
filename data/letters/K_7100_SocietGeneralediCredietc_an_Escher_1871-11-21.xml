        <p rend="left" xml:id="K_7100_p1">
                    <lb xml:id="p1-l1"/>
          <fw>SOCIETÀ GENERALE</fw>
          <lb xml:id="p1-l2"/>
          <fw>DI</fw>
          <lb xml:id="p1-l3"/>
          <fw>CREDITO PROVINCIALE E COMUNALE</fw>
          <lb xml:id="p1-l4"/>
          <fw>AUTORIZZATA CON <choice>
                            <abbr>R. D.</abbr>
                            <expan>Regio Decreto (königliches Dekret)</expan>
                        </choice> <date when="1869-09-01">1<hi rend="sup">o</hi> SETTEMBRE 1869</date> </fw>
          <lb xml:id="p1-l5"/>
          <fw>Sede, Via Cavour, <choice>
                            <abbr>N.</abbr>
