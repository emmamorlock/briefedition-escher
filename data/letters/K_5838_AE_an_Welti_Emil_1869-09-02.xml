        <p rend="right" xml:id="K_5838_p9">
                    <lb xml:id="p3-l7"/>
          <choice>
                        <abbr>Dr</abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice> A Escher</p>
      </div>
