        <p rend="indent" xml:id="K_3544_p10"><lb xml:id="p3-l10"/>
          <placeName key="Zürich (Stadt)">Zürich</placeName>
          <lb xml:id="p3-l11"/>
          <date when="1863-10-31">31 <choice><abbr>Oct<hi rend="sup">r</hi> </abbr><expan>October</expan></choice>1863. </date>
        </p>
