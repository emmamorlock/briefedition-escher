                    </choice> 4. = " 16.<lb xml:id="p2-l30"/>
                <choice>
                        <abbr>Art.</abbr>
                        <expan>Artikel</expan>
                    </choice> 5. = " 17.<lb xml:id="p2-l31"/>
                <choice>
                        <abbr>Art.</abbr>
                        <expan>Artikel</expan>
                    </choice> 6. = " 19. 20. 21. 22. 23. 24. 25.
<pb n="3"/>
                <lb xml:id="p3-l1"/>
                <choice>
                        <abbr>Art.</abbr>
                        <expan>Artikel</expan>
                    </choice> 7. = <choice>
                        <abbr>Ziff.</abbr>
                        <expan>Ziffer</expan>
                    </choice> 26.<lb xml:id="p3-l2"/>
                <choice>
                        <abbr>Art.</abbr>
                        <expan>Artikel</expan>
                    </choice> 8. = <choice>
                        <abbr>Ziff.</abbr>
                        <expan>Ziffer</expan>
                    </choice> 27.<lb xml:id="p3-l3"/>
                <choice>
