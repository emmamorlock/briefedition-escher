        <p rend="right" xml:id="K_2477_p4">
                    <lb xml:id="p5-l7"/>Ihr ganz ergebenster</p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_2477_p5">
                    <lb xml:id="p5-l8"/>E Welti</p>
      </div>
