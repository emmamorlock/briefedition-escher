        <p rend="left" xml:id="K_0894_p1">
                    <lb xml:id="p1-l1"/>
          <fw>ESCHER WYSS &amp; <choice>
                            <abbr>CIE</abbr>
                            <expan>COMPAGNIE (Gesellschaft)</expan>
                        </choice> <lb xml:id="p1-l2"/>
