      <div type="closer">
        <p rend="right" xml:id="K_2287_p6">
                    <lb xml:id="p2-l12"/>Ihr ganz ergebenster </p>
      </div>
      <div type="address">
        <p rend="right" xml:id="K_2287_p7">
                    <lb xml:id="p2-l13"/>E Welti</p>
      </div>
