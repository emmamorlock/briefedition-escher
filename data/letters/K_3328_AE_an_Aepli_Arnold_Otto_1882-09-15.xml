        <p rend="left" xml:id="K_3328_p16">
                    <lb xml:id="p8-l10"/>
          <placeName type="place" key="Belvoir (Enge, Zürich)">Belvoir</placeName>
          <lb xml:id="p8-l11"/>
          <date when="1882-09-15">15 <choice>
                            <abbr>Sept.</abbr>
                            <expan>September</expan>
                        </choice>
                        1882.</date>
        </p>
