        <p rend="left" xml:id="K_0952_p11">
                    <lb xml:id="p3-l26"/>
          <placeName type="place" key="Altdorf (UR)">Altdorf</placeName> d. <date when="1851-12-03">3
							<choice>
                            <abbr>
                                <hi>Dec</hi>.</abbr>
                            <expan>December</expan>
                        </choice> 1851</date>. </p>
      </div>
