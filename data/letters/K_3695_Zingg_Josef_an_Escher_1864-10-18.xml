        <p rend="left" xml:id="K_3695_p10">
                    <lb xml:id="p6-l12"/>
          <hi>
            <placeName type="place" key="Luzern (Stadt)">Luzern</placeName>
 d. <date when="1864-10-18">18 <choice>
                                <abbr>8<hi rend="sup">br</hi> </abbr>
                                <expan>October</expan>
                            </choice> 1864</date>.</hi>
        </p>
      </div>
