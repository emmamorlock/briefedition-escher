        <p rend="right" xml:id="K_1568_p8">
                    <lb xml:id="p4-l9"/>
          
            <choice>
                        <abbr>D<hi rend="sup">r</hi> </abbr>
                        <expan>Doktor / Doctor</expan>
                    </choice>
                    
          Kern
        </p>
      </div>
